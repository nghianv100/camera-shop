<div class="container">
    <div class="col-md-3">
        <div class="css-treeview">
            <h4>TÀI KHOẢN</h4>
            <ul class="account-manager">
                <a href="/account">
                    <li>Cập nhật thông tin</li>
                </a>
                <a href="/account/password">
                    <li>Đổi mật khẩu</li>
                </a>
                <a href="/account/orders">
                    <li class="selected">Quản lý đơn hàng</li>
                </a>
            </ul>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="col-md-9">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Thành tiền</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>
                        <a href="/account/orders/{{madonhang}}">{{madonhang}}</a>
                    </td>
                    <td>{{ngay}}</td>
                    <td>{{thanhtien}} VND</td>
                    <td>{{trangthai}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="clearfix"></div>
</div>