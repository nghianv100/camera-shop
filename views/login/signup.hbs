<div class="container signin-area">
    {{!-- <div class="alert alert-danger" role="alert">Email của bạn đã được đăng ký.</div> --}}
    <h3 class="signin-title">
        ĐĂNG KÝ
        <span>NGAY</span>
    </h3>
    <div class="modal-body modal-body-sub">
        <form action="/signup" method="POST">
            <div class="styled-input agile-styled-input-top">
                <input required type="email" name="email">
                <label>Email</label>
                <span></span>
            </div>
            <div class="styled-input">
                <input required type="password" name="password" minlength="8" maxlength="32">
                <label>Password</label>
                <span></span>
            </div>
            <div class="styled-input">
                <input required type="password" name="password_confirm" minlength="8" maxlength="32">
                <label>Confirm Password</label>
                <span></span>
            </div>
            <input type="submit" value="ĐĂNG KÝ">
        </form>
        <div class="signup-tip">
            <p>Đã có tài khoản?
                <a href="/signin">Đăng nhập</a> ngay.</p>
        </div>
        <div class="clearfix"></div>
    </div>
</div>